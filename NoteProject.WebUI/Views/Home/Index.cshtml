@using NoteProject.Entities
@model List<Note>
@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="row">

        <div class="col-md-3">
            @Html.Partial("_PartialCategories")
        </div>

        <div class="col-md-9">
            <!--Carousel-->
            <div class="row carousel-holder">

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">

                                <img class="slide-image" src="~/Content/img/800x300.jpg" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/Content/img/800x300.jpg" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/Content/img/800x300.jpg" alt="">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>

            </div>
            <!--Notlar-->
            <div class="row">
                @foreach (Note note in Model)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="~/Content/img/320x150.png" alt="">
                            <div class="caption">

                                <h4>
                                    <a href="#">@note.Title</a>
                                </h4>
                                <h6 class="pull-right">
                                    <i class="fas fa-user"></i> @note.Owner.Username<br />
                                    <i class="fas fa-time"></i> @note.ModifiedOn.ToString("dd.MM.yy HH:mm")
                                </h6>
                               
                                    @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length > 70)
                                    {
                                       <p> @(note.Text.Substring(0,70)+"...")</p>
                                       <p class="pull-right"><a href="#" class="btn btn-default btn-sm">devamı<span class="glyphicon glyphicon-chevron-right"></span></a></p>
                                    }
                                    else
                                    {
                                        @note.Text
                                    }

                              
                               
                            </div>
                        <div>
                            <hr />
                        </div>
                        <div class="ratings">
                            <p class="pull-right">
                                <button class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-comment"></span> Yorumlar
                                </button>
                            </p>
                            <p>
                                <button class="btn btn-default btn-sm" type="button">
                                    <span class="glyphicon glyphicon-star-empty"></span> @note.LikeCount
                                </button>
                            </p>
                        </div>
                    </div>
                </div>
                }



            </div>

        </div>

    </div>

</div>

@section footer{
    @Html.Partial("_PartialFooter")
    }