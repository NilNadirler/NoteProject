@using NoteProject.BusinessLayer
@using NoteProject.Entities

@{ 
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.GetCategories();
}
<p class="lead">Kategoriler</p>
<div class="list-group">
    <a href=@Url.Action("Index","Home") class="list-group-item"><i class="fas fa-arrow-right"></i> Tümü</a>
    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item"><i class="fas fa-arrow-right"></i> @cat.Title</a>
    }

</div>
