    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Note Project</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#"><i class="fas fa-wrench"></i> Yönetim</a>
                    </li>
                    <li>
                        <a href="/Home/MostLiked"><i class="fas fa-star"></i> En Beğenilenler</a>
                    </li>
                    <li>
                        <a href="/Home/Index"><i class="fas fa-th-list"></i> Son Yazılanlar</a>
                    </li>
                    <li>
                        <a href="/Home/About"><i class="fas fa-sign"></i> Hakkımızda</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/Home/login"><i class="fas fa-sign-in-alt"></i> Giriş</a>
                    </li>
                    <li>
                        <a href="/Home/Register"><i class="fas fa-user-plus"></i> Üye Ol</a>
                    </li>
                    <li>
                        <a href="#"><i class="fas fa-user"></i> altanemre</a>
                    </li>
                    <li>
                        <a href="#"><i class="fas fa-sign-out-alt"></i> Çıkış</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    @RenderBody()
    <!-- /.container -->

    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <p>Owner &copy; Altan Emre Demirci</p>
                </div>
                <div class="col-lg-4 text-center">
                    <p>Tüm hakları saklıdır &copy; NoteProject @DateTime.Now.Year</p>
                </div>
                <div class="col-lg-4 text-center">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="e-posta adresiniz" />
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-paper-plane btn-xs"></i> Gönder
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->



</body>

</html>
